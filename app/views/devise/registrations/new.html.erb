<div class="col col-md-4 offset-md-4 col-sm-12 col-12">
  <!-- Login-Registration Form  -->
  <div class="registration-login-form">
    <!-- Tab panes -->
    <div class="tab-content" id="registration-form-tabs-content2">
      <div class="tab-pane fade show active" id="login2" role="tabpanel" aria-labelledby="login2-tab">
        <div class="title h6">Register to Olympus</div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{ class:"content"})  do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="row">
            <div class="col col-12 col-xl-6 col-lg-6 col-md-6 col-sm-12">
              <div class="form-group label-floating">
                <%= f.label :first_name, class:"control-label"  %>
                <%= f.text_field :first_name, class:"form-control" %>
              </div>
            </div>

            <div class="col col-12 col-xl-6 col-lg-6 col-md-6 col-sm-12">
              <div class="form-group label-floating">
                <%= f.label :last_name, class:"control-label"  %>
                <%= f.text_field :last_name, class:"form-control" %>
              </div>
            </div>

            <div class="col col-12 col-xl-12 col-lg-12 col-md-12 col-sm-12">
              <div class="form-group label-floating">
                <%= f.label :email, class:"control-label" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
              </div>

              <div class="form-group label-floating">
                <%= f.label :phone, class:"control-label" %>
                <%= f.text_field :phone, class:"form-control" %>
              </div>
              <div class="form-group label-floating">
                <%= f.label :birthday, class:"control-label"  %>
                <%= f.date_field :birthday, class:"form-control" %>
              </div>

              <div>
                <%= f.file_field :photo, class:"form-control" %>
              </div>

              <div class="form-group label-floating">
                <% if @minimum_password_length %>
                  <%= f.label "Password #{@minimum_password_length} characters minimum", class:"control-label"  %>
                <% else %>
                  <%= f.label :password, class:"control-label"  %>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
              </div>

              <div class="form-group label-floating">
                <%= f.label :password_confirmation, class:"control-label"  %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
              </div>
            </div>
          </div>
          <div class="actions">
            <%= f.submit "Registrarse", class:"btn btn-purple btn-lg full-width" %>
          </div>
        <% end %>
        <div class="content">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
  <!-- ... end Login-Registration Form  -->
</div>



