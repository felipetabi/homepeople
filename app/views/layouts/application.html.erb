<!DOCTYPE html>
<html>
  <head>
    <title>Homepeople</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <% if !user_signed_in? %>
    <%= link_to 'Login', new_user_session_path, class:"waves-effect waves-light btn-large"%>
     <%= link_to 'Registro', new_user_registration_path, class:"waves-effect waves-light btn-large"%>
<% else %>
    <%= link_to('Logout', destroy_user_session_path, class:"waves-effect waves-light btn-large", method: :delete) %>        
<% end %>
    <% if notice %>
      <p class="notice alert_primary"><%= notice %></p>
    <%end%>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <%end%>
    <%= yield %>
  </body>
</html>
