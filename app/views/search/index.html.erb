<%= form_with(url: search_path, method: :get, class: 'navbar-form navbar-left') do |f| %>
  <div class="input-group" data-controller="search">
    <%= f.select :region, @cities.map{|key, value| [value, key]}, {:prompt => "--select county--"}, data: {action: "click->search#funcion"} %>
    <%= f.select :comuna, [], {:prompt => "--select comuna--"} %>
    <%= f.label :category, class:"form-label" %>
    <%= f.select(:category_id, @categories.map{|category| [category.name, category.id]}) %>
    <div class="input-group-btn">
      <%= button_tag "Buscar servicio", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>
    </div>
  </div>
<% end %>

<% @services.each do |service| %>
  <%= service.region %>
  <%= service.comuna %>
  <%= service.category.name %>
<% end %>